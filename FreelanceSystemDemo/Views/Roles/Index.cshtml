@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@if (Request.IsAuthenticated)
{

    <div style="width:inherit">
        <h2>Roles List</h2>
        <table class="table table-bordered table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <div style="display:grid;">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-dark", @style = "font-size: 20px;" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-dark", @style = "font-size: 20px;" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-default btn-dark", @style = "font-size: 20px;" })
                        </div>
                    </td>
                </tr>
            }

        </table>
        <div>

            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
        </div>
    </div>
}