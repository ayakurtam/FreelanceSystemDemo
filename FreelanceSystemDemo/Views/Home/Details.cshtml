@model FreelanceSystemDemo.Models.Job

@{ ViewBag.Title = "Job Details";
                Layout = "~/Views/Shared/_MainLayout.cshtml"; }

<div class="col-md-12">
    <h4>@ViewBag.Title</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobContent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobContent)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobImage)
        </dt>

        <dd>
            <img src="~/Uploads/@Html.DisplayFor(model=>model.JobImage)"
                 class="thumbnail"
                 style="width:200px; height:200px;" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobBudget)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.JobBudget)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NumberOfProposal)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfProposal)
        </dd>

    </dl>
    <div class="form-actions no-color">
        @Html.ActionLink("Apply to this", "Apply", new { id = Model.Id }, new { @class = "btn btn-danger" })
        <a class="btn btn-default btn-dark" style="font-size: 16px; margin-left:5px" href="#">Save</a>
        @Html.ActionLink("Back to Home", "Index", null, new { @class = "btn btn-default" })
    </div>
    <link href="~/Content/StarStyle.css" rel="stylesheet" />

    <div class="container">
        <div class="star-widget">
            <input type="radio" name="rate" id="rate-5" />
            <label for="rate-5" class="fas fa-star"></label>
            <input type="radio" name="rate" id="rate-4" />
            <label for="rate-4" class="fas fa-star"></label>
            <input type="radio" name="rate" id="rate-3" />
            <label for="rate-3" class="fas fa-star"></label>
            <input type="radio" name="rate" id="rate-2" />
            <label for="rate-2" class="fas fa-star"></label>
            <input type="radio" name="rate" id="rate-1" />
            <label for="rate-1" class="fas fa-star"></label>
        </div>
    </div>

</div>
