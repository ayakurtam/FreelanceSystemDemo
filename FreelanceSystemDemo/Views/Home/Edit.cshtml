@model FreelanceSystemDemo.Models.ApplyForJob

@{
    ViewBag.Title = "Edit ";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div style="width:inherit">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>@ViewBag.Title</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.JobId)
            @Html.HiddenFor(model => model.UserId)


            <div class="form-group">
                @Html.LabelFor(model => model.JobId, "Job Title", htmlAttributes: new { @class = "control-label col-md" })
                <div class="col-md">
                    @Model.job.JobTitle
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UserId, "User Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Model.user.UserName
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md" })
                <div class="col-md">
                    @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ApplyDate, htmlAttributes: new { @class = "control-label col-md" })
                <div class="col-md">
                    @Model.ApplyDate
                </div>
            </div>


            <div class="form-actions no-color">
                <input type="submit" value="Save" class="btn btn-default" />
                @Html.ActionLink("Back to List", "GetJobsByUser", null, new { @class = "btn btn-default btn-danger" })
            </div>

        </div>
    }
</div>


