@model IEnumerable<FreelanceSystemDemo.Models.ApplyForJob>

@{
    ViewBag.Title = "GetAppliedJobsByUser";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2 class="col-md-12">All Jobs That You Applied For</h2>

<table class="table col-md-12 table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.job.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplyDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.job.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplyDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-dark" }) 
                @Html.ActionLink("Details", "DetailsOfJob", new { id = item.Id }, new { @class = "btn btn-default btn-dark" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-default btn-dark" })
            </td>
        </tr>
    }

</table>
