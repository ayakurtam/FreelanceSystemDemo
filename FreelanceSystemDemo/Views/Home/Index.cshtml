<!-- to get all categories -->
@model IEnumerable<FreelanceSystemDemo.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Hello</h1>
    <p>Welcome to freelance system. You can share your work if you are a freelancer or you ca hire someone to do a job for you as a client</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

@foreach (var item in Model) // to view all job categories
{
    <div class="panel panel-default" style="margin:60px;">
        <h1 class="panel-heading">@Html.DisplayFor(modelItem => item.CategoryName)</h1>
        <h6>@Html.DisplayFor(modelItem => item.CategoryDescription)</h6>
        <div class="col">
            @foreach (var subItem in item.Jobs) // to view jobs inside each category
            {
            <div class="col-md" style="margin-bottom:50px;">
                <img src="~/Uploads/@subItem.JobImage" class="thumbnail" style="width:350px; height:350px; border:solid; border-color:black;" />
                <h3>@Html.DisplayFor(modelItem => subItem.JobTitle)</h3>
                <hr / style="width: 50%">
                <p>@Html.DisplayFor(modelItem => subItem.JobContent)</p>
                @Html.ActionLink("Details", "Details", new { JobId = subItem.Id }, new { @class = "btn btn-primary" })
            </div>
            }
        </div>
    </div>
}