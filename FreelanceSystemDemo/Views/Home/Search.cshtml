@model IEnumerable<FreelanceSystemDemo.Models.Job>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<div class="" style="margin:10px; width:inherit">
    <h1>Results</h1>

    @using (Html.BeginForm("Search", "Home", FormMethod.Post))
    {
        <div class="d-flex" style="width:inherit; column-gap:20px; margin-bottom:30px; ">
            <input class="form-control me-2" name="searchName" id="searchName" style="font-size: 16px;" type="search" placeholder="Search Key" aria-label="Search">
            <input class="form-control me-2" name="startDate" id="startDate" style="font-size: 16px;" type="search" placeholder="Start Date" aria-label="Start Date">
            <input class="form-control me-2" name="endDate" id="endDate" style="font-size: 16px;" type="search" placeholder="End Date" aria-label="End Date">
            <button class="btn btn-default btn-dark" style="font-size: 16px; margin-left:5px" id="searchbtn" type="submit">Search</button>
        </div>
    }

    @if (Model != null)
    {
        <div class="row">
            @foreach (var subItem in Model) // to view jobs inside each category
            {
                <div class="list-group-item" style="margin-left:30px; margin-bottom:30px; background-color:#45464880; padding:10px; border:solid; border-color:#b4abb7; height:360px; ">
                    <img src="~/Uploads/@subItem.JobImage" class="thumbnail" style="width:200px; height:200px; border:solid; border-color:black;" />
                    <h3>@Html.DisplayFor(modelItem => subItem.JobTitle)</h3>
                    <hr style="width: 50%" />
                    @Html.ActionLink("Details", "Details", new { JobId = subItem.Id }, new { @class = "btn btn-default btn-dark" })
                </div>
            }
        </div>
    }
    else
    {
        <h4 style="margin:20px">The is no Results</h4>
    }



</div>
